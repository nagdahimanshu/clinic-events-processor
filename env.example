# Server Configuration
PORT=3000
NODE_ENV=development

# Storage Configuration
# Set SKIP_S3=true to process files directly from memory (no AWS needed for local dev)
SKIP_S3=true

# For production with S3, uncomment and set:
# S3_BUCKET=your-bucket-name
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=us-east-1

# Slack Notifications
# Optional: Set Slack webhook URL for notifications
# If not set, notifications will be logged to console
SLACK_WEBHOOK_URL=https://slack.com/WEBHOOK_URL

# Logging Configuration
# Log level: error, warn, info, debug (default: info in production, debug in development)
# Logs are always written to logs/error.log and logs/combined.log
LOG_LEVEL=debug

# Processing Configuration (in milliseconds)
PROGRESS_INTERVAL_MS=10000 
